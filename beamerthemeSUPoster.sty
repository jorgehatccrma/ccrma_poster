% headline colors and fonts
\setbeamercolor{headline}{fg=white,bg=cardinal}
\setbeamercolor{title in headline}{fg=white}
\setbeamercolor{author in headline}{fg=sandstone}
\setbeamercolor{institute in headline}{fg=sandstone}
\setbeamercolor{logo in headline}{fg=black,bg=pantone7527}
\setbeamercolor{separation line}{bg=pantone465}

% footline colors and fonts
\setbeamercolor{footline}{fg=sandstone,bg=cardinal}
\setbeamerfont{footline}{size=\normalsize}

% body colors and fonts
\setbeamercolor*{normal text}{fg=black,bg=pantone7527}

% block environment
\setbeamercolor*{block body}{bg=white,fg=black}
\setbeamercolor*{block title}{fg=sandstone,bg=pantone405}
\setbeamerfont{block title}{size=\large,series=\bf}


\setbeamercolor{alerted text}{use={headline},fg=headline.bg}

\setbeamertemplate{navigation symbols}{}  % no navigation on a poster


\setbeamertemplate{itemize items}[triangle]
\setbeamercolor{itemize item}{use={headline},fg=headline.bg}
\setbeamercolor{caption name}{use={headline},fg=headline.bg}


